<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:showDividers="middle"
    android:background="@color/white">

    <TextView
        android:id="@+id/dialog_alert_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="96dp"
        android:padding="8dp"
        android:lineSpacingExtra="6dp"
        android:letterSpacing="0.05"
        android:textSize="20sp"
        android:textColor="@color/color_text_black_primary"
        tools:text="清空数据清空数清空数据清空数据" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:showDividers="middle"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_alert_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/label_cancel"
            android:textSize="20sp"
            android:textColor="@color/text_red_primary"
            android:background="@drawable/selector_white_gray" />

        <TextView
            android:id="@+id/dialog_alert_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/label_confirm"
            android:textSize="20sp"
            android:textColor="@color/text_red_primary"
            android:background="@drawable/selector_white_gray" />

    </LinearLayout>
</LinearLayout>