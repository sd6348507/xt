<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/color_text_black_primary">

    <TextView
        android:id="@+id/dialog_calendar_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:textColor="@color/color_text_black_primary" />

    <CalendarView
        android:id="@+id/dialog_calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:firstDayOfWeek="1"
        android:shownWeekCount="5"
        android:selectedWeekBackgroundColor="@color/colorPrimaryDark"
        android:focusedMonthDateColor="@color/colorAccent"
        android:weekSeparatorLineColor="@color/colorPrimary"
        android:unfocusedMonthDateColor="#F9F"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:showDividers="middle"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_calendar_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/label_cancel"
            android:textSize="20sp"
            android:textColor="@color/text_red_primary"
            android:background="@drawable/selector_white_gray" />

        <TextView
            android:id="@+id/dialog_calendar_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/label_confirm"
            android:textSize="20sp"
            android:textColor="@color/text_red_primary"
            android:background="@drawable/selector_white_gray" />

    </LinearLayout>

</LinearLayout>